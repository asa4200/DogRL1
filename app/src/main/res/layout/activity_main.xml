<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="견생역전"
            android:textSize="30dp"
            android:textColor="#000000"
            android:gravity="center"></TextView>

        <ImageView
            android:id="@+id/nextimg"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/d001"></ImageView>

        <TextView
            android:id="@+id/ExText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서울특별시-중구-2020-00001"
            android:textColor="#000000"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/ExText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2세 서울 중앙 보호소"
            android:textColor="#000000"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/ExText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="분양대기중"
            android:textColor="#000000"
            android:gravity="center_horizontal"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ShowAnoderButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="17dp"
                android:text="다른동물보기"
                ></Button>
            <Button
                android:id="@+id/Happywaybutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="35dp"
                android:text="분양 진행하기"></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#000000"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp"
            >

            <Button
                android:id="@+id/DogTipButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="댕꿀팁"></Button>

            <Button
                android:id="@+id/DogCheckButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="분양알아보기"></Button>
            <Button
                android:id="@+id/youtubelink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="동물이야기"></Button>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>